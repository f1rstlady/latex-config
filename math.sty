\newcommand*{\longto}{\longrightarrow}
\newcommand*{\Tau}{\mathcal{T}} % Capital tau

% Swap \epsilon and \varepsilon, \phi and \varphi
\RequirePackage{etoolbox}
\newcommand*{\@swap}[1]{\letcs{\@tmp}{#1}\csletcs{#1}{var#1}\cslet{var#1}{\@tmp}}
\newcommand*{\swap}{\forcsvlist{\@swap}}
\swap{epsilon,phi}

\DeclarePairedDelimiter{\ea}{\langle}{\rangle}
\DeclarePairedDelimiter{\eb}{\lbrack}{\rbrack}
\DeclarePairedDelimiter{\ec}{\lbrace}{\rbrace}
\DeclarePairedDelimiter{\ep}{\lparen}{\rparen}

% Over- and underbrace as command in LaTeX syntax and with spacing problems fixed
\newcommand*{\Overbrace}[2]{{\overbrace{#1}_{#2}}}
\newcommand*{\Underbrace}[2]{{\underbrace{#1}_{#2}}}

% Less-equal and greater-equal with slanted line
\renewcommand*{\le}{\leqslant}
\renewcommand*{\ge}{\geqslant}

% A \set command to draw sets with adjusted mid
\DeclarePairedDelimiterX{\set}[1]\lbrace\rbrace{
    \def\given{\nonscript\:\delimsize\vert \allowbreak\nonscript\:\mathopen{}}
    #1}

% Commands to set shortcuts for fields, operating on lists
\newcommand*{\@newfield}[1]{
    \expandafter\newcommand\expandafter*\expandafter{\csname #1\endcsname}{\mathbb{#1}}}
\newcommand*{\newfield}{\forcsvlist{\@newfield}}
\newfield{N,Z,Q,R,C,K}

% Commands to set new and renew math operators, operating on lists
\newcommand*{\@newoperator}[1]{\expandafter\DeclareMathOperator\csname #1\endcsname{#1}}
\newcommand*{\@renewoperator}[1]{\csundef{#1}\@newoperator{#1}}
\newcommand*{\newoperator}{\forcsvlist{\@newoperator}}
\newcommand*{\renewoperator}{\forcsvlist{\@renewoperator}}
\renewoperator{Re,Im}

% Create a theorem environment: \newtheorem[<style>]{<env_name>}{<title>}.
\let\@newtheorem\newtheorem
\renewcommand{\newtheorem}[3][plain]{
    \theoremstyle{#1}
    \@newtheorem{#2}[theorem]{#3}
    \@newtheorem*{#2*}{#3}}

\RequirePackage{iflang}
\@newtheorem {theorem} {\IfLanguageName{ngerman}{Satz}{Theorem}}
\@newtheorem*{theorem*}{\IfLanguageName{ngerman}{Satz}{Theorem}}
\newtheorem{corollary}{\IfLanguageName{ngerman}{Korollar}{Corollary}}
\newtheorem{lemma}{Lemma}
\newtheorem{proposition}{Proposition}
\newtheorem[definition]{definition}{Definiton}
\newtheorem[definition]{example}{\IfLanguageName{ngerman}{Beispiel}{Example}}
\newtheorem[remark]{remark}{\IfLanguageName{ngerman}{Bemerkung}{Remark}}
